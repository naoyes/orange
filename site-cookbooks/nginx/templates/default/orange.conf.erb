server {
  listen <%= node['nginx']['virtual']['orange']['port'] %>;
  server_name <%= node['nginx']['virtual']['orange']['server_name'] %>;

  access_log <%= "#{node['nginx']['virtual']['orange']['log_dir']}/access_log" %>;
  error_log <%= "#{node['nginx']['virtual']['orange']['log_dir']}/error_log" %>;

  location / {
    root <%= node['nginx']['virtual']['orange']['docroot'] %>;
    index index.php index.html index.htm;
  }

  location ~ \.php$ {
    fastcgi_pass   127.0.0.1:9000;
    fastcgi_index  index.php;
    fastcgi_param  SCRIPT_FILENAME <%= "#{node['nginx']['virtual']['orange']['docroot']}$fastcgi_script_name" %>;
    include        fastcgi_params;
  }
}
